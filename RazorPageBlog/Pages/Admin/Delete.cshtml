@page
@model RazorPageBlog.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Delete</h1>

<h3 class="warningText">Are you sure you want to delete this?</h3>

<div>
    <h4>Articles</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => Model.Article.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => Model.Article.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => Model.Article.Body)
        </dt>
        <dd class="col-sm-10">
            <div class="border">
                @Html.Raw(Model.Article.Body)
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => Model.Article.CoverPhoto)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(m => Model.Article.CoverPhoto)"
                 class="img-thumbnail articleCoverPhoto"
                 alt="@Html.DisplayTextFor(m => Model.Article.Title)" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => Model.Article.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => Model.Article.CreateDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => Model.Article.Tags)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => Model.Article.Tags)
        </dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Article.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-page="./Index">Back to List</a>
</form>