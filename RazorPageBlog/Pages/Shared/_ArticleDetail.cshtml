@model RazorPageBlog.Data.Article
@if (Model != null)
{
    <div>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CoverPhoto)
            </dt>
            <dd class="col-sm-10">
                <img src="@Html.DisplayFor(model => model.CoverPhoto)"
                     class="img-thumbnail articleCoverPhoto"
                     alt="@Html.DisplayTextFor(model => model.Title)"/>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Body)
            </dt>
            <dd class="col-sm-10">
                <div class="border">
                    @Html.Raw(Model.Body)
                </div>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreateDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreateDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tags)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tags)
            </dd>
        </dl>
    </div>
}